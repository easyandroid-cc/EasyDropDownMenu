<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cc.easyandroid.menu.simple.Main3Activity"
    tools:showIn="@layout/activity_main3">

    <cc.easyandroid.menu.widget.EasyDropDownGroup
        android:id="@+id/easyDropDownMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <cc.easyandroid.menu.widget.CommonEasyDropDownMenu
            android:id="@+id/menuFilter1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/q_ffffff"
            android:clickable="true"
            android:saveEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menuTitle="單列單選"
            app:menuTitleView="@layout/menu_title_layout1" />

        <cc.easyandroid.menu.widget.CommonEasyDropDownMenu
            android:id="@+id/menuFilter2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/q_ffffff"
            android:clickable="true"
            android:saveEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menuTitle="單列多選"
            app:menuTitleView="@layout/menu_title_layout1" />

        <cc.easyandroid.menu.widget.CommonEasyDropDownMenu
            android:id="@+id/menuFilter3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/q_ffffff"
            android:clickable="true"
            android:saveEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menuTitle="多列多選"
            app:menuTitleView="@layout/menu_title_layout1" />

        <cc.easyandroid.menu.widget.CommonEasyDropDownMenu
            android:id="@+id/menuFilter4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/q_ffffff"
            android:clickable="true"
            android:saveEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menuTitle="More"
            app:menuTitleView="@layout/menu_title_layout1" />

        <cc.easyandroid.menu.widget.PopEasyDropDownMenu
            android:id="@+id/menuFilter5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/q_ffffff"
            android:clickable="true"
            android:saveEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menuTitle="Pop"
            app:menuTitleView="@layout/menu_title_layout1" />

        <cc.easyandroid.menu.widget.PopEasyDropDownMenu
            android:id="@+id/menuFilter6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/q_ffffff"
            android:clickable="true"
            android:saveEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menuTitle="Pop"
            app:menuTitleView="@layout/menu_title_layout1" />
    </cc.easyandroid.menu.widget.EasyDropDownGroup>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easyDropDownMenuContainer">

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textColor="@color/q_333333"
            android:layout_height="wrap_content"
            android:text=" ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView ScrollView TextViewScrollView TextView ScrollView TextView" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#00000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easyDropDownMenuContainer">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
